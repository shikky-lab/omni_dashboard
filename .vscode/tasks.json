{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "./bin/${workspaceFolderBasename}",
                "-v",
                "./..."
            ],
            "options": {
                "env": {
                    "GOARM": 7,
                    "GOARCH": "arm",
                    "GOOS": "linux",
                }
            }
        },
        // {
        //     "label": "change acl",
        //     "type": "shell",
        //     "command": "icacls",
        //     "args": [
        //         ".\\bin",
        //         "/grant",
        //         "Everyone:F",
        //     ],
        // },
        {
            "label": "copy sqls",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "/y",
                "/I",
                ".\\sql",
                "${config:piPaths.sql}"
            ],
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // },
            // "dependsOn": [
            //     "go build",
            // ]
        },
        {
            "label": "copy",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "/y",
                "/I",
                ".\\bin",
                "${config:piPaths.bin}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "copy sqls",
                "go build"
                // "change acl"
            ]
        },
    ]
}