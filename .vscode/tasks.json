    "version": "2.0.0",
    "tasks": [
        {
            "label": "go build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "./bin/${workspaceFolderBasename}",
                "-v",
                "./..."
            ],
            "options": {
                "env": {
                    "GOARM": 7,
                    "GOARCH": "arm",
                    "GOOS": "linux",
                }
            }
        },
